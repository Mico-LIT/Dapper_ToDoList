@model PagedList.IPagedList<APP.Models.TaskListViewModel>
@*@model PagedList.IPagedList<PagingApp.Models.Phone>*@
@using PagedList.Mvc;

@{
    ViewBag.Title = "Задача";
}

<h2>ToDoList</h2>

<p>
    @Html.ActionLink("Создать новую задачу", "Create")
</p>
<table class="table">
    <tr>
        <th>
                @Html.DisplayNameFor(model => model[0].DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DeadLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DateStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DateEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Priority)
            </th>
            <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority.Name)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Детали", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
